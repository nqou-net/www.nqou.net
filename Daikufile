desc 'build';
task build => sub {
    sh qw{tools/build.pl};
    sh qw{hugo --minify --logLevel=info};
};

desc 'test build';
task test => sub {
    sh qw{tools/build.pl};
    sh qw{hugo -F --minify --logLevel=debug};
};

desc 'new post';
task new => sub {
    my $time = time;
    sh qw{hugo new}, "post/$time.md";
};

desc 'show drafts';
task drafts => sub {
    sh qw{hugo list drafts};
};

desc 'develop server';
task server => sub {
    sh qw{hugo server -D -F};
};

task default => sub { sh q{daiku -T} };
